[user]
	name = Kanai Masumi
	email = masumi.net@gmail.com
[color]
	ui = auto
[alias]
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	co = checkout
	ci = commit
	cp = cherry-pick
	st = status -sb
	br = branch
	mg = merge --ff
	mgnf = merge --no-ff
	df = diff
	difff = diff --word-diff
	cancel = reset --soft HEAD^
	zip = !git archive --format=zip HEAD > `git symbolic-ref --short HEAD`.zip
	tgz = !git archive --format=tar.gz HEAD > `git symbolic-ref --short HEAD`.tar.gz
[core]
	quotepath = false
	excludesfile = /Users/masumi/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[merge]
	ff = false
	tool = vimdiff
[push]
	default = simple
[pull]
	ff = only
[ghq]
	root = /Users/masumi/dev/src
